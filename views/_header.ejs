<header>
    <div>
        <p><a href="/">Codeial</a></p>
        <% if(locals.user){ %>
            <form action="/users/search" method="POST">
                <input type="text" name="name" placeholder="Search">
                <button>Search</button>
            </form>
        <% } %>
    </div>

    <div>
        <% if(locals.user){ %>
            <p>
                <a href="/users/profile/<%= locals.user._id %>"><%= locals.user.name %></a>
            </p>
            <p>
                <a href="/users/sign-out">Sign Out</a>
            </p>
        <% }else{ %>
            <p><a href="/users/sign-in">Sign In</a></p>
            <p><a href="/users/sign-up">Sign Up</a></p>
        <% } %>
    </div>
</header>