<h1>Home</h1>
<div>
    <% if(locals.user){ %>
        <form action="/posts/create" method="POST">
            <textarea name="content"  cols="30" rows="3" required placeholder="Type Post..."></textarea>
            <input type="submit" value="Post">
        </form>
    <% } %>
    <section>
        <ul>
            <% for(post of posts){ %>
                <p> <%= post.content %> </p>
                <small><p> <%= post.user.name %> </p></small>
                <% if(locals.user){ %>
                    <form action="/comments/create" method="POST">
                        <input type="text" name="content" placeholder="Type Comments..." required>
                        <input type="hidden" name="post" value="<%= post._id %>">
                        <input type="submit" name="Add Comment">                       
                    </form>
                <% } %>
                <ul>
                    <% for(comment of post.comments){ %>
                        <p> <%= comment.content %> </p>
                        <small><p> <%= comment.user.name %> </p></small>
                    <% } %>
                </ul>
            <% } %>
        </ul>
    </section>
</div>